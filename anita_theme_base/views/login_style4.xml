<odoo>
    <data>

        <template id="anita_theme_base.frontend_layout4" name="awesome_login_layout" inherit_id="web.layout" primary="True">
            
            <xpath expr="//head/meta[last()]" position="after">
                <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no"/>
            </xpath>

            <xpath expr="//head/link[last()]" position="after">
                <t t-call-assets="web.assets_common" t-js="false"/>
                <t t-call-assets="web.assets_frontend" t-js="false"/>
                <!-- add the extra css -->
                <link rel="stylesheet" href="/anita_theme_base/static/css/login/fonts.css"/>
                <link rel="stylesheet" href="/anita_theme_base/static/css/login/style4/login.css"/>
                <style>{{login_style_txt}}</style>
            </xpath>

            <xpath expr="//head/script" position="after">
                <script type="text/javascript">
                    odoo.session_info = <t t-out="json.dumps(request.env['ir.http'].get_frontend_session_info())"/>;
                    if (!/(^|;\s)tz=/.test(document.cookie)) {
                        const userTZ = Intl.DateTimeFormat().resolvedOptions().timeZone;
                        document.cookie = `tz=${userTZ}; path=/`;
                    }
                </script>
                <t t-call-assets="web.assets_common_minimal_js" t-css="false" defer_load="True"/>
                <t t-call-assets="web.assets_frontend_minimal_js" t-css="false" defer_load="True"/>
                <t t-call="web.conditional_assets_tests"/>
                <t t-call-assets="web.assets_common_lazy" t-css="false" lazy_load="True"/>
                <t t-call-assets="web.assets_frontend_lazy" t-css="false" lazy_load="True"/>
                <!-- add the extra js -->
                <script type="text/javascript" src="/anita_theme_base/static/js/jquery.js" lazy_load="True"/>
                <script type="text/javascript" src="/anita_theme_base/static/js/anita_login.js" lazy_load="True"/>
            </xpath>

            <xpath expr="//t[@t-out='0']" position="replace">
                <div class="panel right d-flex align-items-center justify-content-center">
                    <aside>
                        <figure>
                            <img t-attf-src="/web/binary/company_logo{{ '?dbname='+db if db else '' }}" alt="Logo" style="max-height:120px; max-width: 100%; width:auto"/>
                        </figure>
                        <t t-out="0"/>
                        <div class="container pb-3 copy">
                            <t t-if="not disable_database_manager">
                                <a class="border-right pr-2 mr-1" href="/web/database/manager">Database</a>
                            </t>
                            <a href="#">Powered by
                                <span><t t-esc="powered_by"/></span>
                            </a>
                        </div>
                    </aside>
                </div>
                <video class="video" loop="1" muted="1" autoplay="1" playsinline="1">
                    <source src="/anita_theme_base/static/media/demo.mp4" type="video/mp4"/>
                    <source src="/anita_theme_base/static/media/demo.ogv" type="video/ogg"/>
                    <source src="/anita_theme_base/static/media/demo.webm" type="video/webm"/>
                </video>
            </xpath>
        </template>

        <!-- login layout style2 -->
        <template id="anita_theme_base.login_layout4"
            name="anita_theme_base.login_layout" inherit_id="web.login_layout" primary="True">
            <xpath expr="t" position="replace">
                <t t-call="anita_theme_base.frontend_layout4">
                    <!-- thes variable will use by the front layout -->
                    <t t-set="html_data" t-value="{'style': 'height: 100%;'}"/>
                    <!-- set the body class name -->
                    <t t-set="body_classname" t-value="'bg-100'"/>
                    <t t-out="0"/>
                </t>
            </xpath>
        </template>

        <!-- theme login style2 -->
        <template id="anita_theme_base.login_style4"
                  name="anita_theme_base.login"
                  inherit_id="web.login"
                  primary="True">
            <!-- replace the whole content -->
            <xpath expr="." position="replace">
                <t t-call="anita_theme_base.login_layout4">
                    <form class="text-left"
                              role="form"
                              t-attf-action="/web/login"
                              method="post"
                              onsubmit="this.action = this.action + location.hash">

                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        
                        <!-- error or tip msg! -->
                        <div class="d-sm-flex justify-content-between">
                            <p class="alert alert-danger" t-if="error" role="alert">
                                <t t-esc="error"/>
                            </p>
                            <p class="alert alert-success" t-if="message" role="status">
                                <t t-esc="message"/>
                            </p>
                        </div> 

                        <div class="form-group">
                            <label for="login">Email</label>
                            <input placeholder="User Email" name="login" t-att-value="login" type="text" required="required" class="form-control" id="login" autofocus="autofocus" autocapitalize="off"/>
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password"  name="password" class="form-control border-end-0" value="" placeholder="Enter Password" required="required" autocomplete="current-password"  t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>
                        </div>

                        <div class="clearfix mb-3">
                            <div class="float-right">
                                <button t-if="debug" type="submit" name="redirect" value="/web/become" class="btn btn-link btn-sm btn-block">Log in as superuser</button>
                            </div>
                        </div>

                        <button type="submit" class="btn_1 full-width">Login</button>
                        <div class="o_login_auth"/>
                        <input type="hidden" name="redirect" t-att-value="redirect"/>
                    </form>
                </t>
            </xpath>
        </template>
    </data>
</odoo>
